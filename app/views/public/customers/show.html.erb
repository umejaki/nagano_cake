<div class="container">
  <div class="row">
   <div class="col-12">
    <h3>マイページ</h3>
    <table class="col-8">
      <tbody>
       <tr>
        <td><h4>登録情報</h4></td>
        <td><%= link_to "編集する",customer_edit_path, class:'btn btn-primary', class:'btn btn-success' %></td>
       </tr>
       <tr>
        <td>氏名</td>
        <td><%= @customer.first_name %><%= @customer.last_name %></td>
      </tr>
      <tr>
        <td>カナ</td>
        <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <td>注文履歴</td>
        <td><%= link_to "一覧を見る", orders_path %></td>
     <tr>
     </tbody>
    </table>
  </div>
 </div>
</div>