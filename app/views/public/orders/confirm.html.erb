<div class="container">
 <div class="row">
  <h4>注文情報確認</h4>
   <div class="col-12">
     <div>
       <table>
         <% @cart_item.each do |cart_item| %>
         <body>
           <tr>
            <td>商品名</td>
            <td>単価(税込み)</td>
            <td>数量</td>
            <td>小計</td>
           </tr>
           <tr>
             <td><%= cart_item.item.name %></td>
             <td><%= cart_item.item.with_tax_price%></td>
             <td><%= cart_item.amount%></td>
             <% @sum += cart_item.subtotal %>
             <td><%= @sum %></td>
           </tr>
         </body>
         <% end %>
       </table>
     </div>
   </div>
 </div>
</div>