<div class="container">
 <div class="row">
  <h4>注文情報確認</h4>
   <div class="col-12">
     <div>
       <table>
         <% @cart_item.each do |cart_item| %>
         <body>
           <tr>
            <td>商品名</td>
            <td>単価(税込み)</td>
            <td>数量</td>
            <td>小計</td>
           </tr>
           <tr>
             <td><%= cart_item.item.name %></td>
             <td><%= cart_item.item.with_tax_price%></td>
             <td><%= cart_item.amount%></td>
             <% @sum += cart_item.subtotal %>
             <td><%= @sum %></td>
           </tr>
         </body>
         <% end %>
       </table>
       <div>
        <%= '支払い方法' %>
        <%= @order.payment_method %>
        </div>
       <div>
          <strong><%= 'お届け先' %></strong>
          <%= @order.postal_code %>
          <%= @order.address %>
          <%= @order.name %>
         </div>
       </div>
   </div>
 </div>
</div>
