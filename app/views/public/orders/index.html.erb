<div class="container">
  <h4>注文履歴一覧</h4>
  <table>
    <body>
      <tr>
        <td class='col-2'>注文日</td>
        <td class='col-4'>配達先</td>
        <td class='col-2'>注文商品</td>
        <td class='col-2'>支払金額</td>
        <td class='col-2'>注文詳細</td>
      </tr>
       <% @orders.each do |order| %>
      <tr>
        <td class='col-2'><%= order.created_at.strftime("%Y/%m/%d %H:%M") %></td>
        <td class='col-4'><%= '〒' %><%= order.postal_code %><%= order.address %></td>
        <td class='col-2'>
          <% order.order_products.each do |order_product| %>
          <%= order_product.item.name %>
          <% end %>
        </td>
        <td class='col-2'><%= order.payment_amount + order.postage %><%= '円' %></td>
        <td class='col-2'><%= link_to '表示する', order_path(order.id), class: "btn btn-primary" %></td>
        <% end %>
      </tr>
    </body>
  </table>
</div>