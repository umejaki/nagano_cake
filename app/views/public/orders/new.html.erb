<div class="container">
 <div class="row">
  <h4>注文情報</h4>
   <div class="col-12">
    <div>
     <p><strong>支払方法</strong><p>
      <%= form_with model: @order, url: orders_confirm_path, method: :post do |f| %>
       <%= '　' %><%= f.radio_button :payment_method, "credit_card" %>
       <%= f.label :payment_method, "クレジットカード" %><br>
       <%= '　' %><%= f.radio_button :payment_method, "transfer" %>
       <%= f.label :payment_method, "銀行振込" %>
      
    </div>
     <div>
      <p><strong>お届け先</strong></p>
      <div>
       <%= '　' %><%= radio_button_tag :select_address, "0" %>
       <%= f.label :select_address, "ご自身の住所" %>
      </div>
      <div>
       <%= '　' %><%= '〒' %><%= @customer.postal_code %><%= @customer.address %></div>
      <div>
       <%= '　' %><%= @customer.first_name %><%= @customer.last_name %>
      </div>
     </div>
     <div>
      <!--<p><strong>登録済住所から選択</strong></p>-->
      <%#= form_with model: @customer do |f| %>
       <%#= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
      <%# end %>
     </div>
     <div>
      <div>
       <%= '　' %><%= radio_button_tag :select_address, "2" %>
       <%= f.label :select_address, "新しいお届け先" %>
      </div>
      <div>
        <%= '　　　' %><%= f.label :郵便番号（ハイフンなし） %>
        <%= '　　' %><%= f.text_field :postal_code %>
      </div>
      <div>
        <%= '　　　' %><%= f.label :住所 %>
        <%= '　　　　　　　　　　 　　' %><%= f.text_field :address %>
      </div>
      <div>
        <%= '　　　' %><%= f.label :宛名 %>
        <%= '　　　　　　　　　　　　' %><%= f.text_field :name %>
      </div>
       <%= f.submit '確認画面に進む' %>
      <% end %>
     </div>
   </div>
 </div>
</div>