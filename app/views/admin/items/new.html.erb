<div class="container">
  <h3>商品新規登録</h3>
   <div>
      <%= form_with model: @item, url: admin_items_path do |f| %>
      
       <div>商品情報　　<%= f.file_field :image, accept: "image/*" %></div>
       <div>商品名　　　<%= f.text_field :name %></div>
       <div>商品説明　　<%= f.text_area :introduction %></div>
       <div>商品価格　　<%= f.text_field :price %> <%= '円' %></div>
       <div> <%= f.submit "新規登録", class:'btn btn-primary btn-success' %></div>
      <% end %>
   </div>
</div>