<p>商品新規登録</p>
<table>
  <tbody>
    <%= form_with model: @item, url: admin_items_path do |f| %>
    <tr>
      <td>商品情報</td>
      <td><%= f.file_field :image, accept: "image/*" %></td>
    </tr>
    <tr>
      <td>商品名</td>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= f.text_area :introduction %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td></td>
    </tr>
    <tr>
      <td>商品価格</td>
      <td><%= f.text_field :price %> <%= '円' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<p><%= link_to "新規登録", admin_items_path, class:'btn btn-primary', class:'btn btn-success' %></p>