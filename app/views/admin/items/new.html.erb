<h3>商品新規登録</h3>
<table>
  <tbody>
    <%= form_with model: @item, url: admin_items_path do |f| %>
    <tr>
      <td>商品情報</td>
      <td><%= f.file_field :image, accept: "image/*" %></td>
    </tr>
    <tr>
      <td>商品名</td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= f.text_area :introduction %></td>
    </tr>
    <tr>
      <td>商品価格</td>
      <td><%= f.text_field :price %> <%= '円' %></td>
    </tr>
    <%= f.submit "新規登録", class:'btn btn-primary btn-success' %>
    <% end %>
  </tbody>
</table>
