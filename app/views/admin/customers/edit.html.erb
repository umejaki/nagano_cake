<div class="container">
  <h5><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集</h5>
     <h3>会員ID  <%= @customer.id %></h3>
      <%= form_with url: admin_order_path do |f| %>
        <h3>氏名　　　　　　　<%= f.text_field :first_name %>　　<%= f.text_field :last_name %></h3>
        <h3>フリガナ　　　　　<%= f.text_field :first_name_kana %>　　<%= f.text_field :last_name_kana %></h3>
        <h3>郵便番号　　　　　<%= f.text_field :postal_code %></h3>
        <h3>住所　　　　　　　<%= f.text_field :address %></h3>
        <h3>電話番号　　　　　<%= f.number_field :telephone_number %></h3>
        <h3>メールアドレス　　<%= f.text_field :email %></h3>
        <h3>退会ステータス
          <%= '　' %><%= f.radio_button :is_deleted, "有効" %>
          <%= f.label :is_deleted, "有効" %>
          <%= '　' %><%= f.radio_button :is_deleted, "退会" %>
          <%= f.label :is_deleted, "退会" %>
        </h3>
      <%= f.submit '変更を保存する' class: "btn btn-success" %>
      <% end %>
</div>