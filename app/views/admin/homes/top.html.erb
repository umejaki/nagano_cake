<div class='container'>
 <h3>注文履歴一覧</h3>
 
   <table>
    <body>
     <tr>
      <td class='col-2'><strong></strong>購入日時</strong></td>
      <td class='col-2'><strong></strong>購入者</strong></td>
      <td class='col-2'><strong></strong>注文個数</strong></td>
     </tr>
     　<% @orders.each do |order| %>
     　<% total_amount = 0 %>
     <tr>
       <td class='col-2'>
         <%= link_to order.created_at.strftime("%Y/%m/%d %H:%M"), admin_order_path(order.id) %>
       </td>
       <td class='col-2'><%= order.customer.first_name %><%= order.customer.last_name %></td>
       <td class='col-2'>
         <% order.order_products.each do |order_product| %>
         <% total_amount += order_product.amount %>
         <% end %>
         <%= total_amount %>
       </td>
     　   <% end %>
     </tr>
    </body>
   </table>
</div>
