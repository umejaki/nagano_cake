<div class='container'>
 <h3>注文履歴一覧</h3>
   <table>
    <body>
     <tr>
      <td class='col-2'><strong></strong>購入日時</strong></td>
      <td class='col-2'><strong></strong>購入者</strong></td>
      <td class='col-2'><strong></strong>注文回数</strong></td>
     </tr>
     <tr>
      <% @order.each do |order| %>
       <td class='col-2'>
         <%= order.created_at %>
       </td>
       <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
       <td class='col-2'><%= @sum %></td>
      <% end %>
     </tr>
    </body>
   </table>
</div>
